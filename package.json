{
  "name": "ping",
  "version": "0.0.0",
  "description": "Test the internet speed",
  "main": "app/electron.js",
  "author": "Eduardo Lopes",
  "license": "MIT",
  "scripts": {
    "postinstall": "yarn run electron-builder install-app-deps",
    "parcel-server": "yarn run parcel -p 3000 ./app/index.html --out-dir build/ --no-autoinstall",
    "parcel-build": "yarn run parcel build ./app/index.html --out-dir build/ --public-url ./",
    "wait-server": "wait-on http://localhost:3000",
    "clean-build": "yarn run del build/ .cache dist/",
    "build": "yarn run clean-build && yarn run parcel-build && yarn run electron-builder --dir",
    "pack": "yarn run electron-builder --win",
    "dev": "yarn run del build/ && yarn run concurrently \"yarn run parcel-server\" \"yarn run wait-server && cross-env NODE_ENV=development electron .\""
  },
  "build": {
    "appId": "com.ping",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraFiles": [
      {
        "from": "app/ookla-speedtest-1.0.0-win64",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "app/electron.js",
      "app/DB.js",
      "app/preload.js",
      "build/**/*"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-root-path": "^1.0.16",
    "moment": "^2.24.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "recharts": "^2.0.0-beta.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "del-cli": "^3.0.0",
    "electron": "^7.1.10",
    "electron-builder": "^22.3.2",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^1.5.0",
    "sass": "^1.25.0",
    "wait-on": "^4.0.0"
  }
}
