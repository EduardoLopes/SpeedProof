{
  "name": "speedproof",
  "version": "0.1.0",
  "description": "SpeedProof is usefull for anyone who needs to keep track of the velocity of your internet service. With this app you will be able to search, sort, tag speedtest tests and see the data in charts!",
  "main": "app/electron.js",
  "author": "Eduardo Lopes",
  "license": "MIT",
  "scripts": {
    "postinstall": "yarn run electron-builder install-app-deps",
    "parcel-server": "yarn run parcel -p 3000 ./app/index.html --out-dir build/ --no-autoinstall",
    "parcel-build": "yarn run parcel build ./app/index.html --out-dir build/ --public-url ./",
    "wait-server": "wait-on http://localhost:3000",
    "clean-build": "yarn run del build/ .cache dist/",
    "build": "yarn run clean-build && yarn run parcel-build && yarn run electron-builder --dir",
    "pack": "yarn run electron-builder --win",
    "dev": "yarn run concurrently \"yarn run parcel-server\" \"yarn run wait-server && cross-env NODE_ENV=development electron .\""
  },
  "lint-staged": {
    "app/**/*.{js,jsx}": [
      "yarn run eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "build": {
    "appId": "com.speedproof",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "app/electron.js",
      "app/DB.js",
      "app/DBConfig.js",
      "app/preload.js",
      "build/**/*"
    ]
  },
  "dependencies": {
    "download": "^7.1.0",
    "electron-is-dev": "^1.1.0",
    "i18next": "^19.3.2",
    "i18next-browser-languagedetector": "^4.0.2",
    "i18next-xhr-backend": "^3.2.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "rc-calendar": "^9.15.9",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-i18next": "^11.3.3",
    "react-router-dom": "^5.1.2",
    "recharts": "^2.0.0-beta.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "sha256-file": "^1.0.0",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "del-cli": "^3.0.0",
    "electron": "^7.2.4",
    "electron-builder": "^22.3.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^1.5.0",
    "prettier": "^1.19.1",
    "sass": "^1.25.0",
    "wait-on": "^4.0.0"
  }
}
